{
    "name": "blog-entries-to-json",
    "version": "0.0.1",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "bin": "./dist/index.js",
    "license": "MIT",
    "scripts": {
        "precommit": "lint-staged",
        "start": "cross-env NODE_ENV=development ts-node src/index.ts --overview-length 100 --entry-dir entries --summary-path test/summary.json --detail-path test/entries",
        "prebuild": "npm run clean",
        "build": "cross-env NODE_ENV=production tsc",
        "clean": "rimraf -g './dist' -g './test' -g './src/**/*.{d.ts,js}'",
        "lint": "tslint 'src/**/*.{ts,tsx}'",
        "prettier": "prettier --write 'src/**/*.{ts,tsx,json}'",
        "test": "cross-env NODE_ENV=test jest",
        "test:watch": "npm run test -- --watchAll",
        "tsc": "tsc"
    },
    "lint-staged": {
        "subTaskConcurrency": 1,
        "linters": {
            "*.{ts,tsx}": [
                "prettier --write",
                "tslint",
                "git add"
            ],
            "*.json": [
                "prettier --write",
                "git add"
            ]
        }
    },
    "peerDependencies": {},
    "dependencies": {
        "chalk": "^2.3.2",
        "chokidar": "^2.0.2",
        "commander": "^2.15.1",
        "globby": "^8.0.1",
        "html-minifier": "^3.5.12",
        "jsdom": "^11.6.2",
        "markdown-it": "^8.4.1",
        "markdown-it-front-matter": "^0.1.2",
        "markdown-it-prism": "^1.1.2",
        "mkdirp": "^0.5.1",
        "yamljs": "^0.3.0"
    },
    "devDependencies": {
        "@types/chokidar": "^1.7.5",
        "@types/globby": "^6.1.0",
        "@types/html-minifier": "^3.5.1",
        "@types/jest": "^22.1.4",
        "@types/jsdom": "^11.0.4",
        "@types/markdown-it": "^0.0.4",
        "@types/mkdirp": "^0.5.2",
        "@types/node": "^9.4.6",
        "@types/yamljs": "^0.2.30",
        "cross-env": "^5.1.3",
        "husky": "^0.14.3",
        "jest": "^22.4.2",
        "lint-staged": "^7.0.0",
        "prettier": "^1.10.2",
        "rimraf": "^2.6.2",
        "ts-jest": "^22.4.1",
        "ts-node": "^4.1.0",
        "tslint": "^5.9.1",
        "tslint-config-prettier": "^1.9.0",
        "tslint-plugin-prettier": "^1.3.0",
        "typescript": "^2.7.2"
    }
}
